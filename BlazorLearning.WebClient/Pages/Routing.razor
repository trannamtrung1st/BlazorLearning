@page "/routing-page/{message?}/{number:int?}"
@page "/routing-page/{message}/catch-dots"
@page "/routing-page/{message}/{*catchAll}"
@attribute [Route(Path)]
@implements IDisposable
@inject ILogger<Routing> Logger;
@inject NavigationManager Nav;
@inject IJSRuntime JSRuntime;

<NavigationLock ConfirmExternalNavigation="@changed"
                OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<h3>Routing</h3>

<p>With route param<br />message: @Message, number: @Number</p>

<p>With catch all: @CatchAll</p>

<p>With query params<br /> terms: @Terms, page: @Page</p>

<p>Uri manipulation: @uri</p>

<p>
    <NavLink href="routing-page/different-message">
        Different message
    </NavLink>
    <br />
    <NavLink href="routing-page/#app-focus-here">
        Go to #app-focus-here
    </NavLink>
    <br />
    <button @onclick="@OnNavigate1">
        Navigate 1
    </button>
    <button @onclick="@OnNavigate2">
        Navigate 2
    </button>
    <button @onclick="@ManipulateParams">
        Manipulate params
    </button>
</p>

<p>
    <h3>Nav Handler</h3>
    <button @onclick="@(() => Nav.NavigateTo("/"))">
        Home (Allowed)
    </button>
    <button @onclick="@(() => Nav.NavigateTo("/prevent-navigation"))">
        Prevent navigation
    </button>
</p>

<p>
    <h3>Nav Lock (Changed: @changed)</h3>
    <button @onclick="@(() => Nav.NavigateTo("/"))">
        Home
    </button>
    <button @onclick="@(() => changed = true)">
        Make changes
    </button>
    <a href="https://www.microsoft.com">Microsoft homepage</a>
</p>

